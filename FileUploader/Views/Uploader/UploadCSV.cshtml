@using BusinessLogic.ViewModels;
@model UploaderLoader

@{
    ViewBag.Title = "Upload CSV";
}

<div class="jumbotron">
    <h1>Upload CSV</h1>
</div>

@using (Html.BeginForm("Index", "GymTracker", FormMethod.Get))
{
    <input type="submit" class="btn btn-default" value="Back">
}

@using (Html.BeginForm("UploadCSVTestRun", "Uploader", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    if (Model.ErrorMessage != "")
    {
        <p class="error-text">@Model.ErrorMessage</p>
    }
    <input class="custom-file-upload" type="file" name="SubmittedCSVFile" />
    <br />
    <input type="submit" class="btn btn-default btn-lg" name="Submit" value="Upload" />
}